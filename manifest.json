{
  "manifest_version": 3,
  "name": "Plenty of Indie",
  "version": "1.0",
  "description": "Support Plenty independent bookshop by shopping Bookshop.org",
  "permissions": [],
  "host_permissions": ["*://*.amazon.com/*", "https://bookshop.org/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*"],
      "js": ["content.js"]
    }
  ]
}
